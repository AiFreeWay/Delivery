<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:id="@+id/v_ordered_im_image"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/v_ordered_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/v_ordered_im_image"
        android:layout_toRightOf="@+id/v_ordered_im_image"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/deepGrey"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/v_ordered_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_ordered_tv_title"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@+id/v_ordered_im_image"
        android:layout_toRightOf="@+id/v_ordered_im_image"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorOrange"
        android:translationY="-5dp" />

    <TextView
        android:id="@+id/v_ordered_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_ordered_tv_subtitle"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/v_ordered_im_image"
        android:layout_toRightOf="@+id/v_ordered_im_image"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/v_ordered_iv_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/v_ordered_tv_favorite"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/v_ordered_tv_favorite"
        android:layout_toStartOf="@+id/v_ordered_tv_favorite"
        android:src="@drawable/ic_favorite"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/v_ordered_tv_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/v_ordered_tv_title"
        android:layout_marginRight="10dp"
        android:text="10"
        android:textColor="@color/colorOrange"
        android:textSize="12sp"
        android:translationY="-2dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/v_ordered_iv_under_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/v_ordered_im_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>