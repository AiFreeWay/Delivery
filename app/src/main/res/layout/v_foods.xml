<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:id="@+id/v_foods_im_image"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/v_foods_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/v_foods_im_image"
        android:layout_toRightOf="@+id/v_foods_im_image"
        android:layout_marginTop="15dp"
        android:textSize="21sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/deepGrey"/>

    <TextView
        android:id="@+id/v_foods_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_foods_tv_title"
        android:layout_toEndOf="@+id/v_foods_im_image"
        android:layout_toRightOf="@+id/v_foods_im_image"
        android:fontFamily="sans-serif-medium"
        android:translationY="-5dp"
        android:layout_marginLeft="3dp"
        android:textColor="@color/colorOrange"/>

    <TextView
        android:id="@+id/v_foods_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_foods_tv_subtitle"
        android:layout_toEndOf="@+id/v_foods_im_image"
        android:layout_toRightOf="@+id/v_foods_im_image"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="7dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic"/>

    <ImageView android:id="@+id/v_foods_im_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite"
        android:layout_marginRight="3dp"
        android:layout_alignTop="@+id/v_foods_tv_favorite"
        android:layout_toLeftOf="@+id/v_foods_tv_favorite"
        android:layout_toStartOf="@+id/v_foods_tv_favorite" />

    <TextView android:id="@+id/v_foods_tv_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorOrange"
        android:layout_marginRight="10dp"
        android:text="10"
        android:textSize="12sp"
        android:layout_alignTop="@+id/v_foods_tv_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>