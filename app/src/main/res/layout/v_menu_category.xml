<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/v_menu_category_im_image"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/v_menu_category_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/v_menu_category_im_image"
        android:layout_toRightOf="@+id/v_menu_category_im_image"
        android:layout_marginTop="15dp"
        android:textSize="19sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/deepGrey"/>

    <TextView
        android:id="@+id/v_menu_category_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_menu_category_tv_title"
        android:layout_toEndOf="@+id/v_menu_category_im_image"
        android:layout_toRightOf="@+id/v_menu_category_im_image"
        android:fontFamily="sans-serif-medium"
        android:layout_marginLeft="3dp"
        android:textColor="@color/deepGrey"/>

    <TextView
        android:id="@+id/v_menu_category_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_menu_category_tv_subtitle"
        android:layout_toEndOf="@+id/v_menu_category_im_image"
        android:layout_toRightOf="@+id/v_menu_category_im_image"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="7dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic"/>
</RelativeLayout>